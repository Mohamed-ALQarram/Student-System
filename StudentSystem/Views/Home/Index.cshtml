@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid bg-light vh-100 d-flex align-items-center justify-content-center">
    <div class="text-center p-5 rounded shadow-lg" style="background: rgba(255, 255, 255, 0.8);">
        <h3 class="display-4 text-primary mb-4">Welcome to Student System</h3>

        <div class="d-grid gap-3">
            <a asp-action="StudentShow" asp-controller="Student" class="text-decoration-none">
                <span class="btn btn-info text-white w-50 mx-auto shadow-lg btn-lg">Students</span>
            </a>

            <a asp-action="DepartmentShow" asp-controller="Department" class="text-decoration-none">
                <span class="btn btn-info text-white w-50 mx-auto shadow-lg btn-lg">Departments</span>
            </a>
        </div>
    </div>
</div>
