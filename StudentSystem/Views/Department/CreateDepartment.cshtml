@{
    ViewData["Title"] = "Create Department";
}
@model Department

<div class="container mt-4">
    <h2 class="text-center text-primary mb-4">Create Department</h2>

    <form action="/Department/Add" method="post" class="p-4 shadow-sm rounded bg-light">
        <div class="form-group mb-3">
            <label for="DepartmentName" class="form-label">Department Name:</label>
            <input asp-for="DeptName" id="DepartmentName" class="form-control" placeholder="Enter department name" />
        </div>

        <div class="d-flex justify-content-center">
            <input type="submit" value="Create" class="btn btn-success w-50 shadow-sm" />
        </div>
    </form>
</div>

